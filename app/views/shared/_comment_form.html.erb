  	<%= form_for(@comment, :validate => true, :url => {:controller => 'comments', :action => 'create', :id => post.id, :problem_id => @post.id, :post_type => post.class }) do |f| %>
	    <%= error_messages_for(@errors) %>
	    <%= f.text_field(:comment) %>
	    <%= submit_tag("Submit") %>
	    

	<% end %>
</div>
</noscript>
