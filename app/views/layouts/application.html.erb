<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Find Fix | <%= @page_title %></title>
    <meta name="author" content="Stephen J Bamber">
    <%= stylesheet_link_tag('application', :media => 'all') %>
    <%= javascript_include_tag('application') %>
  </head>
  <body>
  	<div id="wrapper">
	    <div id="header">
	      <%= image_tag('find_fix_logo.png', :alt => 'Find Fix Logo') %>
	      <div class="navigation_links">
	      <%= link_to("Home", {:controller => 'welcome', :action => 'index'}, :class => 'navigation home') %>
	      <%= link_to("Posts", {:controller => 'posts', :action => 'list'}, :class => 'navigation posts') %>
	      <%= link_to("Categories", {:controller => 'categories', :action => 'list'}, :class => 'navigation categories') %>
	      <% if session[:user_id] %>
	      <%= link_to("Logout", {:controller => 'user_access', :action => 'logout'}, :class => 'navigation login-out') %>
	      <% else %>
	      <%= link_to("Login", {:controller => 'user_access', :action => 'login'}, :class => 'navigation login-in') %>
	      <% end %>
	      </div>
	    </div>
	      <div class="login_status">
	    	<% if session[:user_id] %>      	
	      		<p>Logged in as: <%= session[:username]%></p>
	      	<% end %>	
	      </div>
	    <div id="main">
	      <% if !flash[:notice].blank? %>
	      <div class="notice">
	        <%= flash[:notice] %>
	      </div>
	      <% end %>
	      <div id="content">
	        <%= yield %>
	      </div>
	    </div>
		<div id="push"></div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; Stephen J Bamber</p>
    </div>
  </body>
</html>