<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en-UK">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title><%= @page_title %> - Find Fix</title>
    <meta name="author" content="Stephen Bamber" />
    <meta name="description=" content="<%= @page_description %>">

    <link rel="shortcut icon" href="/images/favicon.ico" />
    <%= stylesheet_link_tag('application', :media => 'all') %>
    <%= stylesheet_link_tag('mobile') if mobile_device? %>
    <%= javascript_include_tag('application') %>
    <%= csrf_meta_tag %>
  </head>
  <body>
  	<div id="wrapper">
	    <div id="header">
	      <div id="header_content">
		      <%= link_to(image_tag('find_fix_logo.png', :alt => 'Find Fix Logo', :class => 'page_logo'), {:controller => 'public', :action => 'index'}) %>

		      <div class="access_links">
			      <% if is_admin %>
			      	<%= link_to("Admin Menu", {:controller => 'user_access', :action => 'admin_menu'}, :class => 'access logout') %>
			      <% end %>
			      <% if is_logged_in %>
			      	<%= link_to("Logout", {:controller => 'user_access', :action => 'logout'}, :class => 'access logout') %>
			      <% else %>
			      <%= link_to("Register", {:controller => 'users', :action => 'new'}, :class => 'access register') %>
			      <%= link_to("Login", {:controller => 'user_access', :action => 'login'}, :class => 'access login') %>
			      <% end %>
		      </div>
		      
		      <div id="search_bar">
				<%= form_tag({:controller => 'posts', :action => 'search'}, :method => :get) do %>
				  <%= text_field_tag(:query, "Search for a fix", :onfocus => "this.value=''; $(this).css('color','#000')", :id => 'search_input') %>
				  <%= submit_tag("search", :id => 'search_submit') %>
				  <div id="delete"><span id="x">x</span></div>
				<% end %>
			  </div>
			  
	      </div>
	    </div>
	    
	    <div id="info_bar">
	     <div id="info_bar_content">
			      <%= link_to("Home", {:controller => 'public', :action => 'index'}, :class => 'navigation home') %>
			      <% if is_logged_in %>
			      <%= link_to("Submit a Problem", {:controller => 'posts', :action => 'new'}, :class => 'navigation posts') %>
			      <% end %>
			      <%= link_to("View Problems", {:controller => 'posts'}, :class => 'navigation posts') %>
	      <div class="login_status">
	    	<% if session[:user_id] %>      	
	      		You are logged in as: <%= session[:username]%>
	        <% else %>
	        	You are not logged in
	      	<% end %>	
	      </div>
	     </div>
	    </div>
	    
	    <div id="main">
	 
		  <div id="right_bar">
		  	  <div id="right_content_header">
	      	  </div>
		      <div id="right_bar_content">
		      	<h2><%= @right_header %></h2>
		        <%= yield :right_bar %> 	
		      </div>
		      <div id="right_footer"></div>
		  </div>
		    
		    
		  <div id="main_content">
	      	<div id="content_header">
	      	</div>	      
		    <% if !flash[:notice].blank? %>
		      <div class="notice">
		        <%= flash[:notice] %>
		      </div>
		    <% end %>
	      	<div id="content">
	      		<h2><%= @content_header %></h2>
	        	<%= yield %>
	        </div>
	        <div id="content_footer"></div>
		 </div>	      
		       	
	    </div>
		<div id="push"></div>
    </div>
    <div id="footer">
      <div id="footer_content">
		<p id="mobile_site_link">
		  <% if mobile_device? %>
		    <%= link_to "Full Site", :mobile => 0 %>
		  <% else %>
		    <%= link_to "Mobile Site", :mobile => 1 %>
		  <% end %>
		</p>
        <p id="copyright">Site Design &copy; <%=Time.now.strftime("%Y")%> <a href="http://www.sjbamber.info">Stephen J Bamber</a></p>
      </div>
    </div>
  </body>
</html>