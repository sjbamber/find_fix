	<div class="page_info">
	      <%= page_entries_info @posts, :model => "Problem", :html => false  %>
	</div>
	<div class="pagination">   
	    <%= will_paginate @posts, :container => false %>
	</div>
	<span class="loadingScreen"></span>

<p>Click on the problem title for more detail</p>

    <% posts.each_with_index do |post, i| %>
    <div class="post_list">

      	<%= link_to(truncate(post.title, :length => 80), {:controller => 'posts', :action => 'show', :id => post.id }, 'data-role' => 'button', "data-icon" => "arrow-r") %>
      	<div class="<%= cycle('odd', 'even') %>">
      	  <%= "<p>#{@snippets[i].description_snippet} </p>".html_safe if params[:action] == 'search' %>  	
      	  
    	  <p class="center">  				
		  Categories:
		  <% post.categories.each do |category| %>
      	  	<span><%= link_to(category.name, {:controller => 'posts', :action => 'list', :category_id => category.id}, :class => "list_tags") %></span>
      	  <% end %>
      	  </p>
      	  
      	  <p class="center">
		  Tags:
      	  <% post.tags.each do |tag| %>
  			<span><%= link_to(tag.name, {:controller => 'posts', :action => 'list', :tag_id => tag.id}, :class => "list_tags") %></span>
  		  <% end %>
  		  </p>
  		  <p class="center">
  		  <span>
	      	<% sol_count = solution_count(post)%>
	      	<%= "Fixes:"  %>
	      	<%= sol_count.to_s %>
	      </span>	
	      <span>
	      	<% post_score = vote_count(post)%>
	      	<%= " / Score:" %>
	      	<%= post_score.to_s %>
	      </span>
	      </p>
	      <p class="small-text">Submitted by <%= post.user ? post.user.username : 'Unknown' %> <%= time_ago_in_words(post.updated_at.to_time) %> ago</p> 
      	</div>
      <% if is_admin && is_post_list_page %>
      <div class="actions">  
        <%= link_to("Edit", {:action => 'edit', :id => post.id}, :class => 'action edit') if is_logged_in %>
        <%= link_to("Delete", {:action => 'delete', :id => post.id}, :class => 'action delete') if is_admin %>
      </div>
      <% end %>        
    </div>
    <% end %>
    
<div class="pagination">   
    <%= will_paginate @posts, :container => false %>
</div>
<span class="loadingScreen"></span>
    
