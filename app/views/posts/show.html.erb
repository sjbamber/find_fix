<% @page_title = @post.title %>
<% @content_header = @post.title %>
<% @page_description = @post.description %>

<!-- Show Post -->
<%= render(:partial => 'posts/show_post', :locals => {:post => @post}) %>
<br />  

<!-- Solution List -->
<h2>There <%= @solutions.length == 1 ? 'is' : 'are'%> <%= pluralize(@solutions.length, "Fix")%> posted for this Problem</h2>
<br />
<div class="solutions">
	<%= render @solutions, :post => @post %>
</div>

<!-- New Solution Form -->
<% if is_logged_in %>
<%= error_messages_for(@solution_errors) %>
<%= render(:partial => 'solutions/form', :locals => {:solution => @solution, :post => @post}) %>
<% else %>
<br /><p>To submit a new fix, post a comment or vote please <%= link_to("login", {:controller => 'user_access', :action => 'login'}) %></p>
<% end %>

<!-- Right Bar -->
<% content_for :right_bar do %>
<div class="right_bar_feature">
	<h2>Help</h2>
	<p>Details of the Problem are shown, with associated comments and fixes appearing below.</p><br />
	<p>If you are logged in you can vote on a post using the buttons provided, comment on a post or suggest a fix of your own in the text box at the bottom of the page.</p>
</div>
<% end %>
  
