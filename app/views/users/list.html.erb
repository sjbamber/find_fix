<% @page_title = "Users List"%>
<% @content_header = "Application Users"%>

<div class="user list">
  
  <%= link_to("Register New User", {:action => 'new'}, :class => 'action new') %>
  
  <div><%= pluralize(@users.size, 'user')%> found</div>

  <table class="listing" summary="Post list">
    <tr class="header">
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.role == 1 ? 'Standard' : 'Admin' %></td>
      <td class="actions">
      	<%= link_to("View Posts", {:controller => 'posts', :action => 'list', :user_id => user.id}, :class => 'action list') %>
        <%= link_to("Update", {:action => 'edit', :id => user.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>