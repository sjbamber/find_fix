<% @page_title = "Detailed Category View"%>
<% @content_header = "Show Category"%>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="category show">

  <table summary="Category detail view">
    <tr>
      <th>Category ID</th>
      <td><%= @category.id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @category.name %></td>
    </tr>
    <tr>
      <th>Parent Category</th>
      <td><%= @parent %></td>
    </tr>
      <th>Created</th>
      <td><%= @category.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @category.updated_at %></td>
    </tr>
  </table>
  
</div>